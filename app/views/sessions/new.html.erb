<% provide(:title, "Log in") %>
<h1 style="color: aqua ; font-size: 2.5em">Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email , class:"text-box"%>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, class:"text-box" %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, style:"font-family: 'Times New Roman', Times, serif; color: turquoise; font-size: 1em;" , class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span class ="text-box">Remember me on this computer</span>
      <% end %>


      <%= f.submit "Log in", class: "btn btn-primary", style: "color: purple ; background-color: turquoise"%>
    <% end %>

    <p style="color: white ; font-size: 1.5em">New user? <%= link_to "Sign up now!", signup_path, style: "color: blue ; font-size:1.2em" %></p>
  </div>
</div>  