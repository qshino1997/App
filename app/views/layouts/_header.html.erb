              <li><%= link_to "Settings", '#' , style:"color: aqua ; font-size: 1.2em"%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete, style:"color: aqua ; font-size: 1.2em" %>
