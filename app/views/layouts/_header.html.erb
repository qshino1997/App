  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home" , root_path , style:"color: aqua ; font-size: 1.2em" %></li>
        <li><%= link_to "Help", help_path , style:"color: aqua ; font-size: 1.2em"%></li>
